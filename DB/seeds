CREATE TABLE users (
	"ID" serial Primary Key,
	"name" varChar,
	"email" varChar,
	"password" varChar,
	"picture" text,
	"dog_owner" varChar,
	"provider_walker" varChar,
	"provider_sitter" BOOLEAN,
	"provider_boarder" BOOLEAN,
	"zip" integer,
	"short_desc" varchar(255),
	"bio" TEXT,
	"experience" TEXT
);

CREATE TABLE dog (
	dog_id serial Primary Key,
	dog_name varchar,
	dog_picture TEXT,
	breed varchar,
	weight integer,
	special_notes TEXT,
	owner_id TEXT
);

CREATE TABLE owner_client (
	"owner_id" integer,
	"provider_id" integer,
	"client_request" varchar,
	"provider_approve" varchar
);

CREATE TABLE walk (
    walk_id serial Primary Key,
	provider_id integer,
	owner_id integer,
	dog_id integer,
	start_time TIMESTAMP,
	end_time TIMESTAMP
	
);

CREATE TABLE review (
	"review_id" serial Primary Key,
	"rating" integer,
	"owner_id" integer,
	"provider_id" integer,
	"comment" TEXT,
	"date_time" TIMESTAMP
);

CREATE TABLE chat (
    chat_id serial primary key,
	room_id integer,
	user_id integer,
	name varchar,
	message  TEXT,
	date_time TIMESTAMP
);

drop table if exists Chat

insert into dog (dog_name, breed, weight, special_notes, owner_id)
values ('Beacon', 'mix', '20', 'likes to play', 1); 